  <script>
    (function() {
      // musik lembut tanpa autoplay
      const music = document.getElementById('bgMusic');
      const btn = document.getElementById('musicToggle');
      let playing = false;

      btn.addEventListener('click', function() {
        if (playing) {
          music.pause();
          btn.textContent = 'ðŸŽµ putar musik (non autoplay)';
        } else {
          music.volume = 0.3;  // lembut
          music.play().catch(e => {
            alert('Musik tidak dapat diputar secara otomatis, coba klik lagi.');
          });
          btn.textContent = 'â¸ï¸ hentikan musik';
        }
        playing = !playing;
      });

      // efek hover pada karakter (selain CSS)
      const chibi = document.getElementById('chibi-char');
      chibi.addEventListener('mouseenter', () => {
        // optional extra spark
      });
      chibi.addEventListener('mouseleave', () => {
        // nothing extra
      });

      // tambahan bunga hati interaktif: pesan kecil
      const flowers = document.querySelectorAll('.float-item');
      flowers.forEach((f, index) => {
        f.addEventListener('click', () => {
          alert('ðŸ’– kamu membuat hari ini lebih manis! ðŸ’–');
        });
      });

      // efek hover pada tombol juga
    })();
  </script>

